[Unit]
Description=FAT - Multi-Agent AI Collaboration
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/fat
ExecStart=/home/pi/fat/fat
Restart=always
RestartSec=3

# Watch for binary changes and restart
ExecReload=/bin/kill -HUP $MAINPID

# Environment
Environment=GIN_MODE=release

[Install]
WantedBy=multi-user.target
